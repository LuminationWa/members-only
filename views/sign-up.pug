extends layout

block content
    h1 Sign up
    form(method="POST" action="")
        .form-group
            label(for="username") Username:
            input(type="text" placeholder="Username" name="username" required="true")
            label(for="first_name") First name:
            input(type="text" placeholder="First name" name="first_name" required="true")
            label(for="last_name") Last name:
            input(type="text" placeholder="Last name" name="last_name" required="true")
            label(for="password") Password:
            input(type="password" name="password" required="true")
            label(for="confirm-password") Confirm Password:
            input(type="password" name="confirm-password" required="true")
        button(type="submit") Submit